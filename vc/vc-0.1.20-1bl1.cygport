HOMEPAGE="https://github.com/vlang/${PN}"
SRC_URI="https://github.com/vlang/${PN}/archive/${PV}.tar.gz"

CATEGORY="Devel"
SUMMARY="V compiler's source translated from V to C"
DESCRIPTION="${SUMMARY}"

src_compile()
{
	cd ${B}
	lndirs
	${CC} ${CFLAGS} v.c -o v.exe
}

src_test()
{
	cd ${B}
	./v.exe -v
}

src_install()
{
	cd ${B}
	dobin v.exe
}
