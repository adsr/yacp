HOMEPAGE="https://github.com/libyal/${PN}"
SRC_URI="https://github.com/libyal/${PN}/archive/${PV}.tar.gz"

CATEGORY="Libs"
SUMMARY="Library and tools to access the executable (EXE) format"
DESCRIPTION="libexe is a library to access the executable (EXE) format."

CYGCONF_ARGS="
	--enable-python3
"

src_test()
{
	cd ${B}
	pushd tests
		for f in ${S}/tests/*.{py,sh}
		do
			ln -fs ${f} .
		done
	popd
	cygtest
	rm tests/*.{py,sh}
}

DOCS="
	COPYING.LESSER
"

PKG_NAMES="
	${PN}
	${PN}1
	${PN}-devel
	python36-${PN}
"
libexe_CONTENTS="
	usr/bin/*.exe
	usr/share/doc
	usr/share/man/man1
"
libexe1_CONTENTS="
	usr/bin/*.dll
"
libexe_devel_CONTENTS="
	usr/include
	usr/lib/lib*.dll.a
	usr/lib/pkgconfig
	usr/share/man/man3
"
python36_libexe_CONTENTS="
	usr/lib/python3*
"
libexe_SUMMARY="${SUMMARY} (utilities)"
libexe1_SUMMARY="${SUMMARY} (runtime)"
libexe_devel_SUMMARY="${SUMMARY} (development)"
python36_libexe_SUMMARY="${SUMMARY} (python36 bindings)"
